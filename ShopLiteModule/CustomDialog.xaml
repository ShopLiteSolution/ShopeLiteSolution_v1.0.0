<Window x:Class="ShopLiteModule.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomDialog"  SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ContentRendered="WindowRendered">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Name="Image" Width="32" Height="32" Grid.RowSpan="2" Margin="20,0" />

        <Label Name="QuestionLabel" Grid.Column="1">Question:</Label>
        <TextBox Name="TextAnswer" Grid.Column="1" Grid.Row="1" MinWidth="250">Answer</TextBox>

        <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="DialogOKClicked" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" Name="btnDialogCancel" MinWidth="60" Click="DialogCancelClicked">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
