<Window x:Class="ShopLiteModule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShopLite Solution" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Ask for assistant" HorizontalAlignment="Left" Margin="50,500,0,0" VerticalAlignment="Top" Width="125" Height="35" Click="AskforassistBtn_clicked"/>
        <Button Content="Checkout" HorizontalAlignment="Left" Margin="625,500,0,0" VerticalAlignment="Top" Width="125" Height="35" Click="CheckoutBtn_clicked"/>
        <ListView Name="myList" HorizontalAlignment="Left" Height="425" Margin="50,50,0,0" VerticalAlignment="Top" Width="700">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}" Width="175"/>
                    <GridViewColumn Header="Unit" DisplayMemberBinding="{Binding Path=Unit}" Width="175"/>
                    <GridViewColumn Header="Weight (g)" DisplayMemberBinding="{Binding Path=Weight}" Width="175"/>
                    <GridViewColumn Header="Price ($)" DisplayMemberBinding="{Binding Path=Price}" Width="175"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
